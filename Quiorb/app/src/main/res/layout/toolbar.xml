<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView android:id="@+id/foxQuiorb"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/quiorbfox"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIORB"
            android:textColor="@color/purpleMain"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>

    <ImageButton android:id="@+id/bellNotify"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/bell"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageButton android:id="@+id/newNotify"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/rounded_background_white_15"
        android:backgroundTint="@color/purpleMain"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/bellNotify"
        android:layout_marginTop="15dp"/>

</RelativeLayout>